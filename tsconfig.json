{
	"extends": "@tsconfig/recommended/tsconfig.json",
	"files": ["index.ts"],
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"declaration": true,
		"declarationMap": true,
		"importHelpers": true,
		"lib": ["esnext", "dom", "dom.iterable"],
		"module": "esnext",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true
	}
}